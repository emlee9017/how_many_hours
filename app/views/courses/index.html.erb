<div class="page-header">
  <h1>
    Courses
    <a href="/courses/new" class="btn btn-lg btn-success">New Course</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course num</th>
        <th>Course name</th>
        <th>Professor</th>
        <th>Actions</th>
      </tr>

      <% @courses.where.not(:course_name => "Extra Activities").each do |course| %>
      <tr>
        <td><%= course.course_num %></td>
        <td><%= course.course_name %></td>
        <td><%= course.professor %></td>
        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">See Details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

